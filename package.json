{
  "name": "bostons-deals",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://alibertz.github.io/bostonsdeals/",
  "dependencies": {
    "apollo-boost": "0.1.16",
    "bootstrap": "^4.3.1",
    "cors": "2.8.4",
    "express": "^4.16.3",
    "express-graphql": "0.6.12",
    "graphql": "14.0.2",
    "graphql-tag": "2.9.2",
    "lodash": "^4.17.15",
    "react": "^16.10.2",
    "react-apollo": "2.1.11",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "reactstrap": "6.4.0"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:server start:web",
    "start:web": "react-scripts start",
    "start:server": "node src/server",
    "watch:server": "nodemon --watch src/server src/server",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "scss": "node-sass --watch assets/scss -o assets/css",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "compile-sass": "node-sass src/stylesheet.scss src/stylesheet.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "node-sass": "^4.13.0",
    "nodemon": "1.18.4",
    "npm-run-all": "4.1.3"
  }
}
